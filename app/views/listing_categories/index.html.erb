<!-- 1st row verticaly centered text in the square columns -->
<%= stylesheet_link_tag 'listing/category_listing', 'data-turbolinks-track' => true %>
<% @listing_categories.each do |cat| %>
  <div class="square">
     <div class="content">
          <div class="table">
              <div class="table-cell">
                  <%= raw get_image(cat) %>
                  <center><a href="<%=search_url(:"search[listing_category]" => cat.name)%>"><%= cat.name %></a></center><br>
                    <%= link_to "Send Query", new_multi_chat_path(cat.id.to_s),class: "btn btn-warning btn-sm"%>
              </div>
          </div>
      </div>
  </div>
<% end %>

